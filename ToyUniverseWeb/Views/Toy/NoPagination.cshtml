@model IEnumerable<ToyUniverseData.Models.Toy>

@{
    ViewBag.Title = "Toys";
}

<h2>Toys</h2>

@if(Model.Count() != 0)
{
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CToyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VToyName)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.VToyDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MToyRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiToyQoh)
        </th>
        <th>&nbsp;</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.CToyId)
            </td>
            <td>
                @Html.DisplayFor(model => item.VToyName)
            </td>
            <td>
                @Html.DisplayFor(model => item.VToyDescription)
            </td>
                        <td>
                @Html.DisplayFor(model => item.MToyRate)
            </td>
                        <td>
                @Html.DisplayFor(model => item.SiToyQoh)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.CToyId, action="edit" }) |
                @Html.ActionLink("Details", "Details", new { id=item.CToyId,  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.CToyId })
            </td>
    </tr>
    }
    </table>
} else
{
    <p>No operas found</p>
}

